				階 数:{%$floorId%}階<br />
			</div><!--/.inner-->
			<table><tr><td></td></tr></table>
		</div><!--/.content-->
	</div><!--/#shopinfo-->


	<div id="userinfo">
		<div class="content" style="background:#f3f3c5;">
			<div class="headline" style="background:#a70f0f;color:#ffffff;text-align:center;">
				<img src="{%$staticUrl%}/apps/tower/mobile/img/w.gif" width="100%" height="1" style="margin:1px 0;" /><br />
				{%$userInfo.nickname|escape%}<br />
				<img src="{%$staticUrl%}/apps/tower/mobile/img/w.gif" width="100%" height="1" style="margin:1px 0;" /><br />
			</div><!--/.headline-->

			<div class="inner" style="text-align:left;">
		<table><tr><td></td></tr></table>
				{%emoji code="F9BF"%}<span style="color:#f5102b;">Lv{%$userInfo.level%}</span> [経験:<span style="color:#a70f0f;">{%$userInfo.cexp%}</span>/{%$userInfo.allexp%}]<br />
				<img src="{%$staticUrl%}/apps/tower/mobile/img/myshop/goldicon_17x17.gif" width="17" height="17" align="top" />{%$userInfo.gb%} <img src="{%$staticUrl%}/apps/tower/mobile/img/myshop/micon_17x17.gif" width="17" height="17"  />{%$userInfo.mb%}<br />
				{%emoji code="F99F"%}店舗数:{%$userInfo.floor_count%}<br />
			</div><!--/.inner-->
		</div><!--/.content-->
	</div><!--/#userinfo-->


        </div><!--/#basebackground-->
        <img src="{%$staticUrl%}/apps/tower/mobile/img/spacer.gif" width="1" height="3" /><br />
</div><!--/#container-->
