	        <img src="{%$smarty.const.MAGICKHOST%}/mobile/towerimage/{% if $storeInfo.type==1 %}hair{% elseif $storeInfo.type==2 %}cake{% else %}wash{% /if %}/CF_floorid/{%$floorId%}" width="240" height="248" />
        </div><!--/.headline-->
	</div><!--/#title-->


	<div id="workmenu">
		<div class="content" style="text-align:center;background:#f3f3c5;">
		<table><tr><td></td></tr></table>
			<div class="inner" style="text-align:center;">
			<table width="100%">
			<tr>
			<td width="50%" align="center">
                        {%emoji code="F9B8"%}<a href='{% "$baseUrl/mobile/towerfirst/firstgotowaitingroom?CF_floorid=$floorId&CF_storeType=`$storeInfo.type`"|mixiurl %}'>接　客</a>
			</td>
			<td width="50%" align="center">
                        {%emoji code="F9BA"%}集　金
			</td>
			</tr>
			</table>
			<table><tr><td></td></tr></table>
			{%emoji code="F99A"%}店舗詳細&nbsp;{%emoji code="F9C0"%}ｱｲﾃﾑ箱&nbsp;{%emoji code="F97A"%}ｼｮｯﾌﾟ
			</div>
		<table><tr><td></td></tr></table>
		</div><!--/.content-->
         </div><!--/#workmenu-->

	<div id="shopinfo">
		<div class="content" style="background:#f3f3c5;">
			<div class="inner" style="text-align:left;">
				<span style="color:#f5102b;">Level :{%$storeInfo.level%}</span> [経験:<span style="color:#a70f0f;">{%$storeInfo.cexp%}</span>/{%$storeInfo.allexp%}]<br />
